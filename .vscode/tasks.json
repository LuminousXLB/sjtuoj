{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build for debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileBasenameNoExtension}",
        "-std=c++17",
        "-Wall",
        "-g"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build for oj",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileBasenameNoExtension}",
        "-O2",
        "-std=c++17",
        "-Wall",
        "-static",
        "-DONLINE_JUDGE"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "Powershell.exe"
          }
        }
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build for oj & run",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "focus": true
      },
      "windows": {
        "command": "If (Test-Path ${fileBasenameNoExtension}.exe) {del .\\${fileBasenameNoExtension}.exe}; g++ ${file} -o ${fileBasenameNoExtension} -O2 -std=c++17 -Wall -static -DONLINE_JUDGE; If (Test-Path ${fileBasenameNoExtension}.exe) {.\\${fileBasenameNoExtension}.exe};",
        "options": {
          "cwd": "${fileDirname}",
          "shell": {
            "executable": "Powershell.exe"
          }
        }
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "build & run",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true
      },
      "windows": {
        "command": "If (Test-Path ${fileBasenameNoExtension}.exe) {del .\\${fileBasenameNoExtension}.exe}; g++ ${file} -o ${fileBasenameNoExtension} -O2 -std=c++17 -Wall -static; If (Test-Path ${fileBasenameNoExtension}.exe) {.\\${fileBasenameNoExtension}.exe};",
        "options": {
          "cwd": "${fileDirname}",
          "shell": {
            "executable": "Powershell.exe"
          }
        }
      },
      "problemMatcher": "$gcc"
    }
  ]
}
